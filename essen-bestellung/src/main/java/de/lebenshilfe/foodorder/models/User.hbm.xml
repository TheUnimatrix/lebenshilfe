<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class name="de.lebenshilfe.foodorder.models.User">
		
		<!-- Primärschlüssel -->
		<id name="userId" type="java.lang.Long">
			<generator class="identity"/>
		</id>
		
		<property name="name" type="java.lang.String" length="30"/>
		<property name="email" type="java.lang.String" length="50" unique="true"/>
		<property name="password" type="java.lang.String" length="20"/>
		
		<!-- Fremdschlüssel -->
		<many-to-one name="role" not-null="true" cascade="all"
			class="de.lebenshilfe.foodorder.models.Role"/>
		<many-to-one name="deliveryAddress" not-null="true" cascade="all"
			class="de.lebenshilfe.foodorder.models.Address"/>
		<many-to-one name="billingAddress" not-null="true" cascade="all"
			class="de.lebenshilfe.foodorder.models.Address"/>
	</class>
</hibernate-mapping>