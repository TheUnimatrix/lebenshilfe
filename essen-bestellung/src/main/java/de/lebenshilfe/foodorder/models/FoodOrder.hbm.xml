<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class name="de.lebenshilfe.foodorder.models.FoodOrder">
	
		<!-- Primärschlüssel -->
		<id name="orderId" type="java.lang.Integer">
			<generator class="identity"/>
		</id>
		
		<property name="orderDateTime" type="java.time.LocalDateTime"/>
		
		<!-- Fremdschlüssel -->
		<many-to-one name="user" not-null="true" cascade="all"
			class="de.lebenshilfe.foodorder.models.User"/>
	</class>
</hibernate-mapping>